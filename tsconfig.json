{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015"],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "watch": true,
        "outDir": "dist/"
    },
    "include": ["src/**/*", "src/index.ts"],
    "exclude": ["node_modules"]
}